# Sohbet Environment Variables
# =================================
# This file documents all environment variables used by the Sohbet application.
# Copy this file to .env and fill in the appropriate values for your environment.

# JWT Authentication (REQUIRED)
# =================================
# Secret key used to sign and verify JWT tokens
# IMPORTANT: Generate a strong random secret for production:
#   openssl rand -base64 32
# This is REQUIRED - the server will not start without it
SOHBET_JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Alternative JWT secret name (fallback)
# If SOHBET_JWT_SECRET is not set, this will be used
# JWT_SECRET=your-secret-key

# JWT Token Expiry (optional, defaults to 24 hours)
# How many hours before JWT tokens expire
JWT_EXPIRY_HOURS=24

# Email Service Configuration (optional)
# =================================
# SMTP server configuration for sending verification emails
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_FROM=noreply@sohbet.app
# SMTP_FROM_NAME=Sohbet

# Alternative: Use SendGrid for email delivery
# SENDGRID_API_KEY=your-sendgrid-api-key
# SENDGRID_FROM_EMAIL=noreply@sohbet.app

# Email Verification Settings
# EMAIL_VERIFICATION_ENABLED=true
# EMAIL_VERIFICATION_URL=http://localhost:3000/verify-email
# EMAIL_VERIFICATION_EXPIRY_HOURS=24

# Frontend Configuration (optional)
# =================================
# API URL for frontend to connect to backend
# Defaults to http://localhost:8080 if not specified
# For development: Use http://localhost:8080 or http://127.0.0.1:8080
# For production: Use your actual backend domain (e.g., https://api.yourdomain.com)
NEXT_PUBLIC_API_URL=http://localhost:8080

# WebSocket URL for real-time features
# Defaults to ws://localhost:8081 if not specified
# For development: Use ws://localhost:8081 or ws://127.0.0.1:8081
# For production: Use your actual backend domain with wss:// (e.g., wss://api.yourdomain.com)
NEXT_PUBLIC_WS_URL=ws://localhost:8081

# Database Configuration (optional)
# =================================
# Database file path (relative to server binary)
# Defaults to "academic.db" if not specified
# Use ":memory:" for in-memory database (testing only)
# DATABASE_PATH=academic.db

# Server Configuration (optional)
# =================================
# HTTP server port (defaults to 8080)
# HTTP_PORT=8080

# WebSocket server port (defaults to 8081)
# WS_PORT=8081

# CORS Configuration (optional)
# =================================
# Allowed origin for CORS requests from frontend
# In production, set this to your frontend domain (e.g., https://your-frontend.vercel.app)
# In development, you can use "*" to allow all origins (not recommended for production)
# Defaults to "*" if not specified
# CORS_ORIGIN=https://your-frontend-domain.com

# Security Notes
# =================================
# 1. NEVER commit the .env file to version control
# 2. Use strong, randomly generated secrets in production
# 3. Rotate JWT secrets periodically
# 4. Keep this file secure with appropriate file permissions (chmod 600 .env)
